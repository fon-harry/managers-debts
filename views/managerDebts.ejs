<h1><%= managerData.name %></h1>
<table class="table table-bordered">
	<thead>
		<tr>
			<th scope="col">Client</th>
			<th scope="col">Contract</th>
			<th scope="col">Debt</th>
		</tr>
	</thead>
	<tbody>
		<% managerData.clients.forEach(({clientName, contracts}, index) => { %>
				<% if (contracts.length === 1) {%>
					<tr>
						<td><%= clientName %></td>
						<td><%= contracts[0].contractName %></td>
						<td><%= contracts[0].debt %></td>
					</tr>    
				<% } else { %>
						<tr>
						<td rowspan=<%= contracts.length %> ><%= clientName %></td>
						<% contracts.forEach(({contractName, debt}, index) => { %>
							<% if (index !== 0) {%>
								</tr>
							<% } %>
								<td><%= contractName %></td>
								<td><%= debt %></td>
							</tr>
						<% }) %>
				<% } %>
		<% }) %>
	</tbody>
</table>