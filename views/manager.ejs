<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Взаиморасчеты: <%= name %></title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
</head>
<body>
    <div class="container mt-2">
        <div class="row">
            <div class="col-4">
                <%# <div class="list-group">
                    <button type="button" class="list-group-item list-group-item-action active">Manager1</button>
                    <button type="button" class="list-group-item list-group-item-action">Manager2</button>
                    <button type="button" class="list-group-item list-group-item-action">Manager3</button>
                    <button type="button" class="list-group-item list-group-item-action">Manager4</button>
                </div> %>
            </div>
            <div class="col-8">
                <h1><%= name %></h1>
                <table class="table table-bordered">
                    <thead>
                    <tr>
                        <th scope="col">Client</th>
                        <th scope="col">Contract</th>
                        <th scope="col">Debt</th>
                    </tr>
                    </thead>
                    <tbody>
                    <% clients.forEach(client => { %>
                        <% if (client.contracts.length === 1) {%>
                            <tr>
                                <td><%= client.name %></td>
                                <td><%= client.contracts[0].name %></td>
                                <td><%= client.contracts[0].debt %></td>
                            </tr>    
                        <% } else { %>
                            <tr>
                            <td rowspan=<%= client.contracts.length %> ><%= client.name %></td>
                            <% client.contracts.forEach((contract, index) => { %>
                                <% if (index !== 0) {%>
                                    </tr>
                                <% } %>
                                    <td><%= contract.name %></td>
                                    <td><%= contract.debt %></td>
                                </tr>
                            <% }) %>
                        <% } %>
                    <% }) %>

                    </tbody>
                </table>
            </div>
        </div>


    </div>


    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
</body>
</html>